{
  "compilerOptions": {
    "ignoreDeprecations":"6.0",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "baseUrl": ".",
    // "strict": true,
    "paths": {
      "@/*":["./src/*"],
    },
    //позволяет использовать обычне импорты вместо commonJs - (require() module.export)
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "compilerOptions": {
        "module": "commonjs",
    }
  },
  "include": [
    "./config/jest/setupJest.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}